
<div class="container mt-4">
  <div class="row gy-4">
    <% @lists.each do |list| %>
      <div class="col-md-4 d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
          <div class="card-body inter-red">
            <h5 class="card-title d-flex justify-content-between">
              <%= link_to list.name, list_path(list), class: "text-decoration-none position=absolute text-black" %>
              <%= link_to "X", list_path(list), class: "btn position=absolute", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
            </h5>

<div class="card mb-4">
  <div class="card-body">
    <div>
      <% if list.bookmarks.any? %>
        <% list.bookmarks.each do |bookmark| %>
          <div class="mb-2 text-black">
            <li class="card-subtitle text-muted"><%= bookmark.comment %></li>
          </div>
        <% end %>
      <% else %>
        <h6 class="card-subtitle text-muted">No bookmarks yet</h6>
      <% end %>
    </div>
    <div class="d-flex justify-content-between mt-4">
      <p class="small text-muted mb-0">Upvote?</p>
      <div class="d-flex align-items-center">
        <i class="far fa-thumbs-up mx-2 fa-xs text-body"></i>
        <p class="small text-muted mb-0">4</p>
      </div>
    </div>
  </div>
</div>


            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Add a new list", new_list_path(@list), class: "btn btn-primary" %>
  </div>
</div>
