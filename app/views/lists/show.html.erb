<h2 class="my-4 text-center"><%= @list.name %></h2>

<!-- Bookmarks Section -->
<h3 class="mb-4">Bookmarks</h3>
<% if @list.bookmarks.any? %>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm">
          <% if bookmark.movie.poster_url.present? %>
            <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><strong>Overview:</strong> <%= bookmark.movie.overview %></p>
            <p class="card-text"><strong>Rating:</strong> <%= bookmark.movie.rating %></p>
            <p class="card-text"><strong>Comment:</strong> <%= bookmark.comment %>
              <%= link_to "X",
                        list_bookmark_path(@list, bookmark),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "btn btn-danger btn-sm mt-2" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">No bookmarks yet.</p>
<% end %>

<!-- Add Bookmark Form -->
<h3 class="mt-5">Add a Bookmark</h3>
<div class="card p-4 shadow-sm my-4">
  <%= simple_form_for [@list, @bookmark], html: { class: "form" } do |f| %>
    <div class="mb-3">
      <% f.label :comment, class: "form-label" %>
      <%= f.input :comment, input_html: { class: "form-control" } %>
    </div>
    <div class="mb-3">
      <%= f.label :movie_id, "Choose a Movie", class: "form-label" %>
      <%= f.input :movie_id, collection: Movie.all, label_method: :title, value_method: :id, prompt: "Select a Movie", input_html: { class: "form-select" } %>
    </div>
    <%= f.button :submit, "Add Bookmark", class: "btn btn-primary" %>
  <% end %>
</div>

<!-- Success/Error Messages -->
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% elsif alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
