
<%= form_with model: @list, class: "form-container mt-5 border border-5" do |f| %>
<div class="cont p-5 m-0">

<h1 class="mb-4 titre">ADD LIST</h1>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control mb-4" %>
  </div>

  <div class="d-flex justify-content-between ">
    <%= f.submit "Create List", class: "btn " %>
    <%= link_to "All lists", root_path, class: "btn" %>
  </div>
</div>
 <% end %>
